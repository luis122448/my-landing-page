---
interface Props {
  title: string;
  description: string;
  logo: string;
  skils: string[];
  link: string;
}

const { title, description, logo, skils, link } = Astro.props;
---

<article
  class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg dark:border-gray-800 dark:bg-gray-900 dark:shadow-gray-700/25 sm:p-6"
>
  <span class="inline-block rounded bg-blue-600 text-white dark:bg-blue-700">
    <img src=`${logo}` alt="" class="w-16 h-16 object-cover rounded" />
  </span>
  <a href="#">
    <h3 class="mt-0.5 text-lg font-semibold text-gray-900 dark:text-white">
      {title}
    </h3>
  </a>

  <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500 dark:text-gray-400">
    {description}
  </p>
  <div class="space-x-2">
    {
      skils.map((skil) => (
        <span class="bg-indigo-100 text-indigo-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">
          {skil}
        </span>
      ))
    }
  </div>
  <a
    href=`${link}`
    target="_blank"
    class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600"
  >
    Visualizar

    <span
      aria-hidden="true"
      class="block transition-all group-hover:ms-0.5 rtl:rotate-180"
    >
      &rarr;
    </span>
  </a>
</article>
