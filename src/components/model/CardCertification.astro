---
import "../../styles/basic.css";

interface Props {
  title: string;
  description: string;
  logo: string;
  skils: string[];
  link: string;
}

const { title, description, logo, skils, link } = Astro.props;
---

<section
  class="w-full h-full flex flex-col space-y-2 rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg dark:border-gray-800 dark:bg-gray-900 dark:shadow-gray-700/25 sm:p-6"
>
  <article class="w-16 h-16">
    <img src=`${logo}` alt="" class="w-16 h-16 object-cover rounded" />
  </article>
  <article>
    <h3 class="basic-title">
      {title}
    </h3>
  </article>
  <!-- <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500 dark:text-gray-400">
    {description}
  </p> -->
  <article class="basic-container-tag">
    {skils.map((skil) => <span class="basic-tag-indigo">{skil}</span>)}
  </article>
  <article class="h-full flex items-end">
    <a href=`${link}` target="_blank" class="basic-button-blue">
      <p class="m-auto font-semibold">Visualizar</p>
      <div class="basic-icon-container">
        <i class="fa-solid fa-up-right-from-square basic-icon"></i>
      </div>
    </a>
  </article>
</section>
