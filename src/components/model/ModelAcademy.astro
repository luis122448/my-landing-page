---
interface Props {
  title: string;
  subtitle: string;
  tags: string;
  message: string;
  logo: string;
  skils: string[];
}

const { title, subtitle, tags, message, logo, skils } = Astro.props;
---

<article class="flex space-x-4">
  <div class="mt-2 w-12 h-14 rounded-sm dark:bg-slate-300 bg-slate-200">
    <img src=`${logo}` alt="logo-uni" class="object-contain w-12 h-14" />
  </div>
  <div class="w-full">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
      {title}
    </h3>
    <span
      class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300"
      >{tags}</span
    >
    <time
      class="block mt-1 mb-2 text-sm font-semibold leading-none text-gray-400 dark:text-gray-300"
      >{subtitle}</time
    >
    <div class="my-1 text-base font-normal text-gray-500 dark:text-gray-400">
      {message}
    </div>
    <div class="space-x-2">
      {
        skils.map((skil) => (
          <span class="bg-indigo-100 text-indigo-800 text-sm font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">
            {skil}
          </span>
        ))
      }
    </div>
  </div>
</article>
